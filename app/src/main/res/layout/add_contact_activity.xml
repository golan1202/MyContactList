<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_ripple"
        android:backgroundTint="@color/clear2"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_ripple"
            android:backgroundTint="@color/clear1"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/contact_list_icon"/>

            <LinearLayout
                android:id="@+id/input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_view"
                    android:gravity="center"
                    android:padding="5dp"
                    android:hint="Enter your name please"
                    android:maxLength="15"
                   />

                <EditText
                android:id="@+id/phone_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_view"
                android:gravity="center"
                android:padding="5dp"
                android:inputType="phone"
                android:hint="Enter your phone"
                android:maxLength="12"/>

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_view"
                    android:gravity="center"
                    android:padding="5dp"
                    android:inputType="textEmailAddress"
                    android:hint="Enter your Email"
                    android:maxLength="20"/>

                <EditText
                    android:id="@+id/address_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_view"
                    android:gravity="center"
                    android:padding="5dp"
                    android:inputType="textPostalAddress"
                    android:hint="Enter your Address"
                    android:maxLength="20"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/photo_result"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/pic_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_btn1"
                    android:text="take picture"
                    android:textColor="#fff" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <Button
                    android:id="@+id/pic_btn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_btn1"
                    android:text="gallery"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>